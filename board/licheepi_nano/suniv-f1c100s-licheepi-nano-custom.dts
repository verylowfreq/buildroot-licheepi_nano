&pio {
	uart2_pe_pins: uart2-pe-pins {
		pins = "PE8", "PE7";
		function = "uart2";
	};

	spi1_pins_a: spi1-pins-pc {
		pins = "PA2", "PA0", "PA3", "PA1";
		function = "spi1";
	};
};

&uart2 {
        pinctrl-names = "default";
        pinctrl-0 = <&uart2_pe_pins>;
        status = "okay";
};

&spi1 {
        pinctrl-names = "default";
        pinctrl-0 = <&spi1_pins_a>;
        status = "okay";

};

&usb_otg {
	dr_mode = "host";
	status = "okay";
};

